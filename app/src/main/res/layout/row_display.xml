<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/monthName"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="Header Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="19sp"
        android:textColor="#222222"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/monthTotal"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Tweet body text here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end"
        android:lines="3"
        android:textColor="#666666"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/date"
        android:layout_width="0sp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Tweet body text"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:ellipsize="end"
        android:lines="3"
        android:visibility="invisible"
        android:textColor="#666666"
        android:textSize="14sp" />

    <ImageButton
        android:id="@+id/deleteMonthButton"
        android:layout_width="46sp"
        android:layout_height="fill_parent"
        android:contentDescription="empty"
        android:focusable="false"
        android:src="@android:drawable/ic_menu_delete" />

    <ImageButton
        android:id="@+id/editMonthButton"
        android:layout_width="46sp"
        android:layout_height="fill_parent"
        android:contentDescription="empty"
        android:focusable="false"
        android:src="@android:drawable/ic_menu_edit" />

</LinearLayout>